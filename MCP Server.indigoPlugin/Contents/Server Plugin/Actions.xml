<?xml version="1.0"?>
<Actions>
    <Action id="get_device_info" deviceFilter="indigo.devices">
        <Name>Get Device Info</Name>
        <CallbackMethod>get_device_info</CallbackMethod>
        <ConfigUI>
            <Field id="format" type="menu" defaultValue="json">
                <Label>Format to print to Event Log: </Label>
                <List>
                    <Option value="json">JSON</Option>
                    <Option value="yaml">YAML</Option>
                    <Option value="xml">XML</Option>
                </List>
            </Field>
        </ConfigUI>
    </Action>
</Actions>
